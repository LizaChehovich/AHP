# set working rirectory to current
cd $PBS_O_WORKDIR

# run job for a.out, redirect all output to file *.run.out
free 1>free-`hostname`-run.out&&

echo $PATH
echo $LD_LIBRARY_PATH
echo nodes: $PBS_NODEFILE
cat $PBS_NODEFILE

/usr/lib64/openmpi/bin/mpirun -hostfile $PBS_NODEFILE -wdir lab8 ../bin/lab8


